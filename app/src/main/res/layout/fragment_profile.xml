<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Main Content -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Top Card and Image-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="13dp"
                android:layout_marginBottom="10dp">

                <!-- Container for Rounded Squares -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <!-- White Rounded Square and Details -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/square_rounded_up_white">

                        <!-- Main Container -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginBottom="10dp"
                            android:gravity="right"
                            tools:ignore="RtlHardcoded">

                            <!-- Info -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginBottom="7dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginStart="30dp">


                                <ImageView
                                    android:layout_width="95dp"
                                    android:layout_height="95dp"
                                    app:srcCompat="@drawable/user_solid"
                                    tools:ignore="VectorDrawableCompat"
                                    android:background="@color/white"
                                    android:scaleType="fitXY"
                                    app:tint="#3C3C3C"
                                    android:layout_marginRight="30dp"/>


                                <Space
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <!-- Text Info -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minEms="8"
                                        android:text="Vârstă: 20 ani"
                                        android:textColor="@color/black_main"
                                        android:textSize="18sp">
                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Sex: M"
                                        android:textColor="@color/black_main"
                                        android:layout_marginTop="-7dp"
                                        android:textSize="18sp">
                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Localitate:\nPopești-Leordeni"
                                        android:textColor="@color/black_main"
                                        android:layout_marginTop="-7dp"
                                        android:textSize="18sp"
                                        android:lineSpacingMultiplier="0.8">
                                    </TextView>
                                </LinearLayout>
                            </LinearLayout>

                            <!-- Button Settings -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:background="@drawable/button_rounded"
                                android:gravity="center"
                                android:layout_marginBottom="2dp"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:layout_marginRight="25dp"
                                android:layout_marginEnd="25dp">

                                <!-- Star -->
                                <View
                                    android:layout_width="19dp"
                                    android:layout_height="19dp"

                                    android:background="@drawable/ic_baseline_settings_24"

                                    android:layout_marginRight="4dp"
                                    android:layout_marginLeft="6dp"
                                    android:layout_marginEnd="4dp"
                                    android:layout_marginStart="6dp"
                                    android:backgroundTint="@color/white">
                                </View>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:fontFamily="@font/poppinsbold"
                                    android:textSize="13sp"
                                    android:textColor="@color/white"

                                    android:layout_marginRight="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="1dp"

                                    android:text="Setări">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <!-- Blue Rounded Square -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:background="@drawable/square_rounded_down_blue"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="75dp"

                            android:layout_marginRight="50dp"
                            android:layout_marginEnd="50dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="6dp"
                            tools:ignore="RtlSymmetry"

                            android:fontFamily="@font/poppinsbold"
                            android:textColor="@color/white"
                            android:textSize="26sp"
                            android:lineSpacingMultiplier="0"
                            android:lineSpacingExtra="32dp"
                            android:autoSizeTextType="uniform"
                            android:layout_marginBottom="-5dp"

                            android:text="Constantinescu\nAndrei-Eduard">
                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="14dp"
                            android:layout_marginStart="14dp"
                            android:fontFamily="@font/poppinsbold"
                            android:textColor="#C5D5FB"
                            android:textSize="13sp"
                            android:autoSizeTextType="uniform"

                            android:text="Categoria a III-a, Populația Generală">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- QR Code Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="13dp"
                android:layout_marginBottom="10dp">

                <!-- Main Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <!-- Blue Rounded Corner -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/square_rounded_up_blue"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Codul meu QR"
                            android:textColor="@color/white"
                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="2dp">
                        </TextView>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/square_rounded_down_white">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/qrcodeexample"
                            android:adjustViewBounds="true"
                            android:maxHeight="300dp">

                        </ImageView>

                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>