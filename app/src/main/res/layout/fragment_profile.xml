<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Main Content -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Top Card and Image-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="13dp"
                android:layout_marginBottom="10dp">

                <!-- Container for Rounded Squares -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <!-- White Rounded Square and Details -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/square_rounded_up_white">

                        <!-- Main Container -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginBottom="5dp"
                            android:gravity="right"
                            tools:ignore="RtlHardcoded">

                            <!-- Info -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginStart="30dp">


                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    app:srcCompat="@drawable/ic_baseline_person_24"
                                    tools:ignore="VectorDrawableCompat"
                                    android:background="@color/white"
                                    android:scaleType="fitXY"
                                    app:tint="#3C3C3C"
                                    android:layout_marginRight="30dp"
                                    android:layout_gravity="center_vertical"/>


                                <Space
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <!-- Text Info -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minEms="8"
                                        android:text="Vârstă: ani"
                                        android:textColor="@color/black_main"
                                        android:textSize="18sp"
                                        android:id="@+id/profile_age">
                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Sex:"
                                        android:textColor="@color/black_main"
                                        android:layout_marginTop="-7dp"
                                        android:textSize="18sp"
                                        android:id="@+id/profile_gender">
                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Adresă:\n"
                                        android:maxWidth="200dp"
                                        android:textColor="@color/black_main"
                                        android:layout_marginTop="-7dp"
                                        android:textSize="18sp"
                                        android:lineSpacingMultiplier="0.8"
                                        android:id="@+id/profile_address">
                                    </TextView>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <!-- Blue Rounded Square -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/square_rounded_down_blue"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="50dp"
                            android:layout_marginEnd="50dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="6dp"
                            tools:ignore="RtlSymmetry"

                            android:fontFamily="@font/poppinsbold"
                            android:textColor="@color/white"
                            android:textSize="26sp"
                            android:lineSpacingMultiplier="0"
                            android:lineSpacingExtra="32dp"
                            android:autoSizeTextType="uniform"
                            android:layout_marginBottom="-5dp"
                            android:gravity="center_vertical"

                            android:text=""
                            android:id="@+id/profile_name">
                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="14dp"
                            android:layout_marginStart="14dp"
                            android:fontFamily="@font/poppinsbold"
                            android:textColor="#C5D5FB"
                            android:textSize="13sp"
                            android:autoSizeTextType="uniform"

                            android:text="Categoria a III-a, Populația Generală"
                            android:layout_marginBottom="10dp"
                            >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Appointments -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="13dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/appointment_tab">

                <!-- Main Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <!-- Blue Rounded Corner -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/square_rounded_up_blue"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Programările mele"
                            android:textColor="@color/white"
                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="2dp">
                        </TextView>

                    </LinearLayout>

                    <!-- Content for table -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/square_rounded_down_white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="12dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Momentan nu există vreo programare!"
                                android:textColor="@color/black_main"
                                android:layout_gravity="center"
                                android:id="@+id/appointment_no_text">
                            </TextView>

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:stretchColumns="0,1,2"
                                android:id="@+id/appointment_table">

                                <TableRow>
                                    <TextView
                                        android:layout_column="0"
                                        android:text="Locație"
                                        android:gravity="center"
                                        android:textColor="@color/black_main"
                                        android:padding="3dip"/>
                                    <TextView
                                        android:text="Dată"
                                        android:gravity="center"
                                        android:textColor="@color/black_main"
                                        android:padding="3dip" />
                                    <TextView
                                        android:text="Oră"
                                        android:gravity="center"
                                        android:textColor="@color/black_main"
                                        android:padding="3dip" />
                                </TableRow>

                                <!-- Programare -->
                                <TableRow>
                                    <TextView
                                        android:layout_column="0"
                                        android:text=""
                                        android:gravity="center"
                                        android:textColor="@color/black_main"
                                        android:padding="3dip"
                                        android:id="@+id/appointment_location"/>
                                    <TextView
                                        android:text=""
                                        android:gravity="center"
                                        android:textColor="@color/black_main"
                                        android:padding="3dip"
                                        android:id="@+id/appointment_date"/>
                                    <TextView
                                        android:text=""
                                        android:gravity="center"
                                        android:textColor="@color/black_main"
                                        android:padding="3dip"
                                        android:id="@+id/appointment_hour"/>
                                </TableRow>

                                <!-- Rapel -->
                                <TableRow>
                                    <TextView
                                        android:layout_column="0"
                                        android:text=""
                                        android:gravity="center"
                                        android:textColor="@color/black_main"
                                        android:padding="3dip"
                                        android:id="@+id/rapel_location"/>
                                    <TextView
                                        android:text=""
                                        android:gravity="center"
                                        android:textColor="@color/black_main"
                                        android:padding="3dip"
                                        android:id="@+id/rapel_date"/>
                                    <TextView
                                        android:text=""
                                        android:gravity="center"
                                        android:textColor="@color/black_main"
                                        android:padding="3dip"
                                        android:id="@+id/rapel_hour"/>
                                </TableRow>
                            </TableLayout>
                        </LinearLayout>


                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- QR Code Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="13dp"
                android:layout_marginBottom="80dp">

                <!-- Main Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <!-- Blue Rounded Corner -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/square_rounded_up_blue"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Codul meu QR"
                            android:textColor="@color/white"
                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="2dp">
                        </TextView>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/square_rounded_down_white">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/qrcodeexample"
                            android:adjustViewBounds="true"
                            android:maxHeight="300dp">

                        </ImageView>

                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>