<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFinalActivity"
    android:orientation="vertical">

    <!-- Upper part Logo and title -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Background-->
        <ImageView
            android:layout_marginTop="-80dp"
            android:layout_marginLeft="-50dp"
            android:layout_marginRight="-50dp"
            android:layout_width="600dp"
            android:layout_height="350dp"
            android:src="@drawable/square_rounded_blue_main_menu"
            android:contentDescription="Background">
        </ImageView>

        <!-- Container for logo and tile -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card view for logo -->
            <androidx.cardview.widget.CardView
                android:layout_width="135dp"
                android:layout_height="135dp"
                app:cardElevation="15dp"
                app:cardCornerRadius="26dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                app:cardBackgroundColor="@color/blue_main">
                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:src="@drawable/ic_main_icon_bars"
                    android:layout_gravity="center"
                    android:contentDescription="Logo" />
            </androidx.cardview.widget.CardView>

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:textSize="32sp"
                android:text="Aplicație Vaccinare"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Container for data -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="55dp"
        android:orientation="vertical">

        <!-- Mail -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/blue_dark"
            app:boxStrokeColor="@null">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nume complet"
                android:ems="10"
                android:inputType="text"
                android:background="@color/white"
                android:textColor="@color/black_main"
                android:id="@+id/register_input_name"
                android:maxLength="45">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Pass -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/blue_dark"
            android:layout_marginTop="12dp"
            app:boxStrokeColor="@null">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Adresa"
                android:ems="10"
                android:inputType="text"
                android:background="@color/white"
                android:textColor="@color/black_main"
                android:id="@+id/register_input_address"
                android:maxLength="45">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm Pass -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/blue_dark"
            android:layout_marginTop="12dp"
            app:boxStrokeColor="@null">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CNP"
                android:ems="10"
                android:inputType="text"
                android:textColor="@color/black_main"
                android:background="@color/white"
                android:id="@+id/register_input_CNP"
                android:maxLength="13">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:layout_height="60dp"
            android:layout_marginTop="35dp"
            android:text="Înregistrează-te"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:background="@drawable/input_basic"
            android:textColor="#FFFFFF"
            android:id="@+id/register_button_final"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:textSize="12sp"
            android:text="Deja înregistrat? Autentifică-te aici."
            android:textStyle="bold"
            android:textColor="@color/black_main"
            android:gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>